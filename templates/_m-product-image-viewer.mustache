
        <!-- m-image-viewer -->
        <div class="m-product-image-viewer">
            <div class="image-viewer-stage tab-content">
                {{#product.images }}
                <div id="{{name}}" class="image-viewer-display tab-pane magnify{{#active}} active{{/active}}">
                    <div class="magnifier" data-zoom-img="{{zoom}}"></div>
                    <!-- <img class="mag-small" src="{{large}}" alt=""> -->
                    {{# large }}<img class="mag-small color-swap color-1 color-active" src="{{ large }}" alt="">{{/ large }}
                    {{# large2 }}<img class="mag-small color-swap color-2" src="{{ large2 }}" alt="">{{/ large2 }}
                    <div class="image-viewer-zoom"><i class="icon-zoom-in"></i> Hover to zoom</div>
                </div>
                {{/product.images }}
            </div>
            <ul class="image-viewer-nav tabs">
                {{#product.images }}
                <li class="image-viewer-thumb{{#active}} active{{/active}}">
                    <a href="#{{name}}" data-toggle="tab">
                        {{# thumb }}<img class="color-swap color-1 color-active" src="{{ thumb }}" alt="">{{/ thumb }}
                        {{# thumb2 }}<img class="color-swap color-2" src="{{ thumb2 }}" alt="">{{/ thumb2 }}
                    </a>
                </li>
                {{/product.images }}
            </ul>
        </div>
        <!-- /m-image-viewer -->