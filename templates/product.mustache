{{> head }}
		
<article role="main">
    <div class="content row">
        <div class="three column">
            {{> m-product-image-viewer }}
        </div>
        <div class="three column">
            {{> m-product-form }}
        </div>
        <hr>
        <div class="m-feature row">
            {{#primary-feature}}
                <div class="three column text-center">
                    {{> m-feature}}
                </div>
            {{/primary-feature}}
        </div>
        <div class="row text-center">
            <a href="technology">Learn more about our technology</a>
        </div>
        <hr>
        <h2 class="text-center">You might also be interested in</h2>
        <div class="row">    
        {{#undershirts}}
            <div class="quarter column">
                {{> m-item }}
            </div>
        {{/undershirts}}
        </div>
        <hr>
        <div class="reviews row">
            <div class="column">{{ total reviews }} reviews {{> m-review-rating }}</div> 
            <div class="column">
                <a href="">Write a review</a>
            </div>
        </div>
        <div class="row">
            <div class="three column centered">
                <!-- reviews -->
                {{# reviews }}
                    {{> m-review }}
                {{/ reviews }}
                <!-- /reviews -->
                <hr>
                <div class="text-center">
                    <button class="btn large three" type="button">Read more reviews</button>
                    <br>
                    <button class="btn large three" type="button">Write a review</button>
                </div>
            </div>
        </div>
	</div>
</article>
		
