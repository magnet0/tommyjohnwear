                    </tr>
                    <tr>
                        <td>Tax &amp; Shipping:</td>
                        <td>$7</td>
                    </tr>
                </table>
                <h1><small>Total:</small> $125</h1>
            </div>
            <!-- /cart review -->
            <!-- payment info review -->
            <div class="two column">
                <h3>Payment info</h3>
                <div class="l-row">
                    <div class="three column">
                        <strong>Card Type</strong>
                    </div>
