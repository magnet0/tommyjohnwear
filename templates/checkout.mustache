{{> head }}
		
<article role="main">
    <div class="content row">
        <h1>{{ meta.title }}</h1>
        <h2>Checkout Method</h2>
        <div class="checkout-nav">
            <p>Checkout Method</p>
            <ol>
                <li>Billing Address</li>
                <li>Shipping Address</li>
                <li>Shipping Method</li>
                <li>Payment Method</li>
            </ol>
        </div>
        <div class="checkout-account">
            <!-- create account/login -->
            <div class="account-create">
                <h2>New Customer</h2>
                <button type="button"><h2>Create and account with Facebook</h2></button>
                <p>or</p>
                <form action="">
                    <div class="input-row">
                        <label for="new-email">Email</label>
                        <input id="new-email" type="text">
                    </div>
                    <div class="input-row">
                        <label for="new-password">Password</label>
                        <input id="new-password" type="password">
                    </div>
                    <button type="submit"><h2>Create Account</h2></button>
                </form>
            </div>
            <div class="account-login">
                <h2>Returning Customer</h2>
                <button type="button"><h2>Login with Facebook</h2></button>
                <p>or</p>
                <form action="">
                    <div class="input-row">
                        <label for="email">Email</label>
                        <input id="email" type="text">
                    </div>
                    <div class="input-row">
                        <label for="password">Password</label>
                        <input id="password" type="password">
                    </div>
                    <button type="submit"><h2>Log in</h2></button>
                </form>
            </div>
            <!-- /create account/login -->
        </div>
        <div class="account-billing">
            <h2>2. Billion Address</h2>
            <form action="">
                {{> m-form-billing }}
                <div class="input-row">
                    <input id="shiptosame" type="radio" name="shipto"><label for="shiptosame">Ship to this address</label>
                </div>
                <div class="input-row">
                    <input id="shiptodiff" type="radio" name="shipto"><label for="shiptodiff">Ship to different address</label>
                </div>
                <button type="button"><h2>Continue</h2></button>
            </form>
        </div>
        <div class="account-shipping">
            
            <h2>3. Shipping Address</h2>
            <h3>Use a saved address</h3>
            <form action="">
                <div class="input-row">
                    <select name="" id="">
                        <option value="">Home</option>
                        <option value="">Work</option>
                    </select>
                </div>
                <button type="button"><h2>Continue</h2></button> 
            </form>
            <hr>
            <h3>Add a new address</h3>
            <form action="">
                {{> m-form-shipping }}
                <div class="input-row">
                    <input id="giftwrap" type="checkbox" name="giftwrap"><label for="giftwrap">Gift wrap item - add $5.00</label>
                </div>
                <button type="button"><h2>Continue</h2></button>
            </form>
        </div>
        <div class="account-method">
            <h2>3. Shipping Method</h2>
            <form action="">
                <div class="input-row"><input type="radio" name="shipping" id="shipping1"><label for="shipping1">USPS - $x.xx</label></div>
                <div class="input-row"><input type="radio" name="shipping" id="shipping2"><label for="shipping2">UPS Ground - $x.xx</label></div>
                <div class="input-row"><input type="radio" name="shipping" id="shipping3"><label for="shipping3">UPS 2 day - $x.xx</label></div>
                <div class="input-row"><input type="radio" name="shipping" id="shipping4"><label for="shipping4">UPS Overnight - $x.xx</label></div>
                <button type="button"><h2>Continue</h2></button>
            </form>
        </div>
        <div class="account-payment">
            <h2>4. Payment Method</h2>
            <form action="">
                <div class="input-row">
                    <input id="cc" type="radio" name="payment-method"><label for="cc">Credit Card</label>
                </div>
                <div class="account-payment-cc">
                    <div class="input-row">
                        <label for="">Card Type</label>
                        <select name="" id="">
                            <option value="">Entry 1</option>
                            <option value="">Entry 2</option>
                            <option value="">Entry 3</option>
                            <option value="">Entry 4</option>
                        </select>
                    </div>
                    <div class="input-row">
                        <label for="">Card Number</label>
                        <input type="text">
                    </div>
                    <div class="input-row">
                        <label for="">Expiration</label>
                        <select name="" id="">
                            <option value="">Entry 1</option>
                            <option value="">Entry 2</option>
                            <option value="">Entry 3</option>
                            <option value="">Entry 4</option>
                        </select>
                        <select name="" id="">
                            <option value="">Entry 1</option>
                            <option value="">Entry 2</option>
                            <option value="">Entry 3</option>
                            <option value="">Entry 4</option>
                        </select>
                    </div>
                    <div class="input-row">
                        <label for="">CVN</label>
                        <input type="text"><small><a href="#">What is this?</a></small>
                    </div>
                </div>
                <div class="input-row">
                    <input id="paypal" type="radio" name="payment-method"><label for="paypal">PayPal</label>
                </div>
                <button type="button"><h2>Continue</h2></button>
            </form>
        </div>
        <div class="account-review">
        <h2>Review</h2>
        <div class="l-grid-six">
            <!-- cart review -->
            <div class="four columns">
                {{# cart }}
                    {{> m-product-table }}
                {{/ cart }}
                <!-- cart total -->
                <table>
                    <tr>
                        <td><h2>Subtotal:</h2></td>
