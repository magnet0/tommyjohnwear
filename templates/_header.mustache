<header role="banner">
	<div class="row">
		
		<a href="./" class="base">
            <img src="images/tommyjohn.svg" class="logo" alt="Tommy John">
		</a>
		
		<nav role="navigation">
            <h2 class="nav-title toggle">Menu</h2>
            <ul class="hlist nav-bar resp">
                {{#primary-nav}}
                <li class="hlist-item nav-item{{# dropdown}} dropdown{{/ dropdown}}">
                    <a href="{{id}}"{{#utility}} class="os-toggle" data-target="#{{ id }}"{{/utility}}{{# dropdown}} class="dropdown-toggle" data-toggle="dropdown"{{/ dropdown}}>{{title}}{{# dropdown}} <i class="icon-caret-down"></i>{{/ dropdown}}</a>
                    
                    {{# dropdown}}<ul class="dropdown-menu">{{/ dropdown}}
                        {{# children}}
                            <li><a href="{{ child-id }}">{{# icon }}<i class="icon-{{ icon }}"></i> {{/ icon }}{{ child-title }}</a></li>
                        {{/ children}}
                    {{# dropdown}}</ul>{{/ dropdown}}
                </li>
                {{/primary-nav}}
            </ul>
            <ul class="hlist nav-bar">
                {{#util-nav}}
                <li class="hlist-item nav-item">
                    <a href="{{id}}" class="os-toggle" data-target="#{{ id }}">{{title}}</a>
                </li>
                {{/util-nav}}
            </ul>
		</nav>
		
	</div>
</header>