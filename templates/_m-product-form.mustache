
            <!-- m-product-form-cart -->
            <form action="" class="m-product-form">
                <input type="hidden" name="title" value="{{ product.name }}">
                <input type="hidden" name="price" value="{{ product.price }}">
                <div class="row collapsed"><span class="category-label {{#dasherize}}{{#downcase}}{{product.category}}{{/downcase}}{{/dasherize}}">{{ product.category }}</span></div>
                <h1 class="product-form-title">{{ product.name }} <small class="product-form-subtitle">{{ product.subtitle }}</small></h1>
                <div class="product-form-meta">
                    <h2 class="product-form-price"><span class="currency-type">$</span>{{ product.price }}</h2>
                    <div class="review-preview">
                        <div class="rating-preview">{{> m-review-rating }} <a href="#reviews">{{ total-reviews }} reviews</a></div>
                        <ul class="pslist">
                            <li class="pslist-item"><div class="fb-like" data-href="http://tommyjohnwear.com/#url" data-send="false" data-layout="button_count" data-width="80" data-show-faces="false"></div></li>
                            <li class="pslist-item"><a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
                            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script></li>
                        </ul>
                    </div>
                </div>
                {{> m-product-form-size }}
                {{> m-product-form-color }}
                <p>
                    <small><a href="#notify" data-toggle="modal">Don't see your size or color?</a></small>
                </p>
                <fieldset class="product-form-options collapsed">
                    <div class="row collapsed">
                        <div class="one column">
                            <label class="right inline" for="quantity"><b>Qty.</b></label>
                        </div>
                        <div class="column end">
                            <input class="two" type="number" id="quantity" name="quanitity">
                        </div>
                    </div>
                    <div class="row">
                        <div class="">
                            <label class="inline" for="purchase-one-time"><input type="radio" id="purchase-one-time" name="purchase" checked> One time purchase</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="left">
                            <label class="inline" for="purchase-repeat"><input type="radio" id="purchase-repeat" name="purchase"> Deliver every</label>
                        </div>
                        <div class="one column">
                            <select name="purchase-repeat-months" id="purchase-repeat-months">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                            </select>
                        </div>
                        <div class="column end">
                            <label class="inline" for="purchase-repeat-months">Months</label>
                        </div>
                    </div>
                <div class="product-form-action row">
                    <button type="submit" value="add-to-cart" class="btn three"><i class="icon-plus icon-large left"></i> Add to <strong>Cart</strong></button>
                    <button type="submit" value="add-to-wishlist" class="btn light three">Add to Wishlist</button>
                </div>
                </fieldset>
            </form>
            <!-- /m-product-form-cart -->