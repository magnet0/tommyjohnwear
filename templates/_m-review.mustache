            <!-- single review -->
            <div class="m-review">
                <div class="review-rating row">{{> m-review-rating }}</div>
                <h4 class="review-title no-margin"><strong>{{ title }}</strong></h4>
                <p class="review-meta">
                    <span class="review-date">{{ date }}</span>
                    <span class="review-author">By <a href="">{{ author }}</a></span>
                </p>
                <div class="row">
                    <p>{{ copy }}</p>
                </div>
                <div class="review-author-info row">
                    <h4 class="no-margin">{{ author }}'s info:</h4>
                    <p>Location: Brooklyn, NY</p>
                    <p>Height: {{ height }} | Weight: {{ weight }} | Chest: {{ chest }} | Waist: {{ waist }}</p>
                </div>
                <div class="review-tags">
                    <h4 class="no-margin">Tags:</h4>
                    <a class="tag label" href="#tag-">ball hugging</a> <a class="tag label" href="#tag-">sexy</a> <a class="tag label" href="#tag-">comfortable</a> <a class="tag label" href="#tag-">abs exposing</a>
                </div>
                <div class="review-interact">
                    <p><small><a href="">comment</a> | Was this review helpful?</small> <a class="btn small light" href="">Yes</a> <a class="btn small light" href="">No</a></p>
                    <h4 class="no-margin">Comments</h4>
                    <ol class="comment-list">
                        <li class="comment-item">
                            <p class="review-meta">
                                <span class="review-date">{{ date }}</span>
                                <span class="review-author">By <a href="">{{ author }}</a></span>
                            </p>
                            <div class="comment-content">
                                Well said. I love the way this shirt hugs me.
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /single review -->