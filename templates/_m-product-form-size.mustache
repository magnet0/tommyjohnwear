<!-- m-product-size -->
<fieldset class="product-form-size">
    <legend class="one column">Size</legend>
    <div class="five column">
        <input type="radio" id="size-s" name="size" value="s"><label for="size-s" title="Small">S<span class="hide-on-small-screen">mall</span></label>
        <input type="radio" id="size-m" name="size" value="m"><label for="size-m" title="Small">M<span class="hide-on-small-screen">edium</span></label> 
        <input type="radio" id="size-l" name="size" value="l"><label for="size-l" title="Small">L<span class="hide-on-small-screen">arge</span></label> 
        <input type="radio" id="size-xl" name="size" value="xl" disabled><label for="size-xl" title="XL" class="popover-trigger" data-content="We are currently out of stock in this item" data-title="XL out of stock" data-placement="top" data-trigger="hover">XL<span class="hide-on-small-screen">arge</span></label> 
        <input type="radio" id="size-xxl" name="size" value="xxl"><label for="size-xxl" title="Small">XXL<span class="hide-on-small-screen">arge</span></label>
        <span class="fit-guide-link">
            <small><a href="fit-guide">Fit Guide</a></small>
        </span>
    </div>
</fieldset>
<!-- /m-product-size -->