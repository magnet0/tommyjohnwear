{{> head }}

<div role="main">
    <header class="stage row">
        
        <div class="four column centered text-center">
            <h1 class="heading">{{stage.heading}}</h1>
            <p class="lead">{{stage.lead}}</p>
            <p><a href="shop" class="btn">Shop Now</a></p>
            <p>or <a href="technology">Learn More</a></p>
        </div>
        
	</header>
	<div class="content">
	    
	    <div class="m-primary-feature m-feature row">
	    	{{#primary-feature}}
	    		<div class="two columns text-center">
	    			{{> m-feature}}
	    		</div>
	    	{{/primary-feature}}
      </div>

      <hr>

      <div class="m-secondary-feature m-feature row">
	    	{{#secondary-feature}}
	    		<div class="two columns text-center">
	    			{{> m-feature}}
	    		</div>
	    	{{/secondary-feature}}
      </div>

      <div class="row">
	    	{{#tertiary-feature}}
	    		<div class="three columns text-center">
	    			{{> m-feature}}
	    		</div>
	    	{{/tertiary-feature}}
      </div>
        
	</div>
</div>
		
