{{> head }}

<div role="main">
    <header class="stage">
        
        <div class="l-wrapper">
            <h1 class="heading">{{stage.heading}}</h1>
            <p class="lead">{{stage.lead}}</p>
            <p><a href="shop" class="btn">Shop Now</a></p>
            <p>or <a href="technology">Learn More</a></p>
        </div>
        
	</header>
	<div class="content">
	    
	    <div class="m-primary-feature m-feature l-wrapper">
  	    <div class="l-grid-six">
  	    	{{#primary-feature}}
  	    		<div class="l-block-third">
  	    			{{> m-feature}}
  	    		</div>
  	    	{{/primary-feature}}
        </div>
      </div>

      <hr>

      <div class="m-secondary-feature m-feature l-wrapper">
      	<div class="l-grid-six">
  	    	{{#secondary-feature}}
  	    		<div class="l-block-third">
  	    			{{> m-feature}}
  	    		</div>
  	    	{{/secondary-feature}}
        </div>
      </div>

      <div class="l-wrapper">
      	<div class="l-grid-six">
  	    	{{#tertiary-feature}}
  	    		<div class="l-block-half">
  	    			{{> m-feature}}
  	    		</div>
  	    	{{/tertiary-feature}}
      	</div>
      </div>
        
	</div>
</div>
		
