{{> head }}
		
<article role="main">
    <header class="m-stage tech-stage row">
        
        <div class="four column centered">
            <div class="m-stage-content text-center">
                <h1 class="heading">{{stage.heading}}</h1>
                <p class="lead">{{stage.lead}}</p>
                <!-- orbit carousel -->
                <div id="tech-hero" class="carousel">
                    <div>
                        <div class="tech-wrapper">
                            <ul class="tech-item-list">
                                <li class="tech-item">
                                    <a href="#tailored-stretch">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">Tailored stretch technology</span>
                                    </a>
                                </li>
                                <li class="tech-item">
                                    <a href="#micro-modal">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">Non-Piling Micro Modal fabric</span>
                                    </a>
                                </li>
                                <li class="tech-item">
                                    <a href="#memory-collar">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">Memory Collar</span>
                                    </a>
                                </li>
                            </ul>
                            <img src="images/dudebro/dummy-techdude.png" class="tech-hero-img">
                        </div>
                    </div>
                    <div>
                        <div class="tech-wrapper">
                            <ul class="tech-item-list">
                                <li class="tech-item">
                                    <a href="#quick-draw">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">Quick Draw Fly</span>
                                    </a>
                                </li>
                                <li class="tech-item">
                                    <a href="#360-stretch">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">360 degree stretch fabric</span>
                                    </a>
                                </li>
                                <li class="tech-item">
                                    <a href="#utility-pocket">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">Utility pocket</span>
                                    </a>
                                </li>
                                <li class="tech-item">
                                    <a href="#mesh-ventilation">
                                        <img src="images/icons/logomark.png" alt="">
                                        <span class="tech-item-title">Mesh ventilation</span>
                                    </a>
                                </li>
                            </ul>
                            <img src="images/stage/stage-tech-underwear.png" class="tech-hero-img">
                        </div>
                    </div>
                </div>
                <!-- /orbit carousel -->
                <p>{{stage.copy}}</p>
            </div>
        </div>
        <div class="overlay tech-overlay js-hidden">
            <!-- undershirt -->
            <div id="tailored-stretch" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">Tailored stretch technology</h2>
                <p>ensures undershirt stays tucked in all day long</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
            <div id="micro-modal" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">Non-Piling Micro Modal fabric</h2>
                <p>Silky soft and lightweight for enhanced feel</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
            <div id="memory-collar" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">Memory Collar</h2>
                <p>Put an end to bacon neck collars</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
            <!-- underwear -->
            <div id="quick-draw" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">Quick Draw Fly</h2>
                <p>Horizontal fly for quick access when nature calls</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
            <div id="360-stretch" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">360 degree stretch fabric</h2>
                <p>Moves with your body in all directions to prevent riding up and bunching</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
            <div id="utility-pocket" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">Utility pocket</h2>
                <p>Stash pocket for ID, keys, cash, iPod(tm), etc</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
            <div id="mesh-ventilation" class="tech-feature-section js-hidden">
                <h2 class="feature-section-title">Mesh ventilation</h2>
                <p>Targeted to keep you cool and dry during activity</p>
                <div class="overlay-controls">
                    <a href="#tech-hero" class="overlay-close"><i class="icon-remove icon-large"></i></a>
                </div>
            </div>
        </div>
    </header>

    <div class="content">
        <div class="row">
            <h2 class="text-center" style="padding-top: 1em">More of the features that make us better</h2>
            <div class="m-feature">
            {{#feature-rows}}
                {{>m-product-attribute }}
            {{/feature-rows}}
            </div>
        </div>
        <hr class="space">
        <div class="m-primary-features row">
            {{#primary-feature}}
                <div class="two column padded">
                    <a class="btn block" href="{{ href }}">
                        {{{ text }}} <em class="pf-action h3">{{action}}</em>
                    </a>
                </div>
            {{/primary-feature}}
        </div>
	</div>
</article>
		
{{> sidebar }}

{{> foot }}